---
import BlogPost from "../component/BlogPost.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import "../style/global.css";
const pageTitle = "Blog page";
const allPosts = Object.values(import.meta.glob('./blog/*.md', { eager: true }));

---

<BaseLayout pageTitle={pageTitle}>
    <p>This is where I will post about my journey learning Astro.</p>
    <ul>
         {allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title}></BlogPost>)}

    </ul>
</BaseLayout>

